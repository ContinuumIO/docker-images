{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>anaconda/renovate-config"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "Dockerfile"
      ],
      "dataSourceTemplate": "custom.miniconda",
      "matchStrings": [
        "# renovate: miniconda\\sARG MINICONDA_URL_\\w+=[\"']https:\\/\\/repo\\.anaconda\\.com\\/miniconda\\/Miniconda\\d-(?<currentValue>py\\d+_[\\d\\.]+\\-\\d+?)-(?<depName>[\\w\\-\\.]+?)[\"']\\sARG SHA256SUM_\\w+=[\"'](?<currentDigest>[a-f\\d]+?)[\"']\\s"
      ]
    }
  ],
  "customDatasources": {
    "miniconda": {
      "defaultRegistryUrlTemplate": "https://repo.anaconda.com/miniconda/.files.json",
      "transformTemplates": [
        "{ \"releases\": [$map($sift($, function($v, $k) { $not($k.$contains(\"latest\")) and $v.sha256 = $.`Miniconda3-latest-Linux-s390x.sh`.sha256}).$keys(), function($v) { { \"digest\": $lookup($, $v).sha256, \"version\": $contains($v.$split(\"-\")[2], /^[0-9]+$/) ? $v.$split(\"-\")[1] & \"-\" & $v.$split(\"-\")[2] : $v.$split(\"-\")[1] } }) }"
      ]
    }
  }
}
