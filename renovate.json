{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>anaconda/renovate-config"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "Dockerfile"
      ],
      "datasourceTemplate": "custom.miniconda",
      "matchStrings": [
        "# renovate: miniconda\\sARG MINICONDA_URL_\\w+=[\"']https:\\/\\/repo\\.anaconda\\.com\\/miniconda\\/Miniconda\\d-(?<currentValue>py\\d+_[\\d\\.]+\\-\\d+?)-(?<depName>[\\w\\-\\.]+?)[\"']\\sARG SHA256SUM_\\w+=[\"'](?<currentDigest>[a-f\\d]+?)[\"']\\s"
      ],
      "versioning": "regex:^py\\d+_(?<major>\\d+)\\.(?<minor>\\d+?)\\.(?<patch>\\d+)(\\-(?<build>\\d+?))?$"
    },
    {
      "customType": "regex",
      "fileMatch": [
        "Dockerfile"
      ],
      "datasourceTemplate": "custom.anaconda",
      "matchStrings": [
        "# renovate: anaconda\\sARG ANACONDA_URL_\\w+=[\"']https:\\/\\/repo\\.anaconda\\.com\\/archive\\/Anaconda\\d-(?<currentValue>[\\d\\.]+\\-\\d+?)-(?<depName>[\\w\\-\\.]+?)[\"']\\sARG SHA256SUM_\\w+=[\"'](?<currentDigest>[a-f\\d]+?)[\"']\\s"
      ]
    }
  ],
  "customDatasources": {
    "miniconda": {
      "defaultRegistryUrlTemplate": "https://repo.anaconda.com/miniconda/.files.json",
      "transformTemplates": [
        "{ \"releases\": [$map($sift($, function($v, $k) { $not($k.$contains(\"latest\")) and $v.sha256 = $.`Miniconda3-latest-Linux-s390x.sh`.sha256}).$keys(), function($v) { { \"digest\": $lookup($, $v).sha256, \"version\": $contains($v.$split(\"-\")[2], /^[0-9]+$/) ? $v.$split(\"-\")[1] & \"-\" & $v.$split(\"-\")[2] : $v.$split(\"-\")[1] } }) }"
      ],
      "versioning": "regex:^(?<major>\\d+)\\.(?<minor>\\d+?)(\\-(?<build>\\d+?))?$"
    },
    "anaconda": {
      "defaultRegistryUrlTemplate": "https://repo.anaconda.com/archive/.files.json",
      "transformTemplates": [
        "{ \"releases\": $map($sift($, function($v, $k){ $k.$contains(\"s390x.sh\") } ).$keys(), function($v) { { \"digest\": $lookup($, $v).sha256, \"version\": $contains($v.$split(\"-\")[2], /^[0-9]+$/) ? $v.$split(\"-\")[1] & \"-\" & $v.$split(\"-\")[2] : $v.$split(\"-\")[1], \"changeLogUrl\": \"https://docs.anaconda.com/free/anaconda/release-notes/#anaconda-\" & ($contains( $v.$split(\"-\")[2], /^[0-9]+$/) ? $v.$split(\"-\")[1] & \"-\" & $v.$split(\"-\")[2] : $v.$split(\"-\")[1]).$replace(\".\", \"-\") } } ) }"
      ]
    }
  }
}
